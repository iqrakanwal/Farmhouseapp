<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:id="@+id/itemdsfd"
    android:background="@drawable/roundedcorner"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:padding="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imagedoc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/bg" />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/doctorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Asian Cat"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card" />

    <TextView
        android:id="@+id/contactnumdoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@color/black"
        android:padding="@dimen/_3sdp"
        android:text="$500"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/doctorname" />

    <TextView
        android:id="@+id/desgiation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsdfsdfd"
        android:textColor="@color/grey"
        app:layout_constraintStart_toStartOf="@+id/doctorname"
        app:layout_constraintTop_toBottomOf="@+id/doctorname" />

    <TextView
        android:id="@+id/hospitalxfv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="fdgdf"
        android:textColor="@color/grey"
        app:layout_constraintStart_toStartOf="@+id/doctorname"
        app:layout_constraintTop_toBottomOf="@+id/desgiation" />


</androidx.constraintlayout.widget.ConstraintLayout>